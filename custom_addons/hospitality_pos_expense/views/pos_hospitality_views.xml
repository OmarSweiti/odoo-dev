<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for Hospitality Expense -->
    <record id="view_pos_hospitality_expense_tree" model="ir.ui.view">
        <field name="name">pos.hospitality.expense.tree</field>
        <field name="model">pos.hospitality.expense</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-muted="state == 'draft'">
                <field name="reference"/>
                <field name="employee_name"/>
                <field name="picking_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Hospitality Expense -->
    <record id="view_pos_hospitality_expense_form" model="ir.ui.view">
        <field name="name">pos.hospitality.expense.form</field>
        <field name="model">pos.hospitality.expense</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_picking" 
                            string="View Stock Transfer" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible': [('picking_id', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_name"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="picking_id" string="Stock Transfer"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids">
                                <tree editable="bottom" decoration-muted="False">
                                    <field name="product_id"/>
                                    <field name="product_uom_id" string="UoM"/>
                                    <field name="quantity"/>
                                    <field name="standard_price" string="Unit Cost"/>
                                    <field name="total_cost" string="Total Cost" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="note" placeholder="Add any additional notes here..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search view for Hospitality Expense -->
    <record id="view_pos_hospitality_expense_search" model="ir.ui.view">
        <field name="name">pos.hospitality.expense.search</field>
        <field name="model">pos.hospitality.expense</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="employee_name"/>
                <field name="picking_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <group string="Group By">
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action window for Hospitality Expense -->
    <record id="action_pos_hospitality_expense" model="ir.actions.act_window">
        <field name="name">Hospitality Expenses</field>
        <field name="res_model">pos.hospitality.expense</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_pos_hospitality_expense_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new hospitality expense.
            </p>
            <p>
                Hospitality expenses are used to record free meals for employees
                as internal transfers to the inventory loss location.
            </p>
        </field>
    </record>

    <!-- Menu item for Hospitality Expense -->
    <menuitem 
        id="menu_pos_hospitality_expense"
        name="Hospitality Expenses"
        parent="point_of_sale.menu_point_of_sale"
        action="action_pos_hospitality_expense"
        sequence="100"
        groups="hospitality_pos_expense.group_hospitality_pos"
    />
</odoo>
