<?xml version="1.0" encoding="utf-8"?>
<templates>
    <!-- Hospitality Button Template for POS -->
    <t t-name="HospitalityButton" owl="1">
        <button class="control-button btn btn-secondary lh-sm"
                t-on-click="onClick"
                t-att-class="{ 'disabled': !isAvailable }">
            <div class="d-flex align-items-center gap-2">
                <span class="fa fa-cutlery" title="Hospitality Expense"></span>
                <span>Hospitality Expense</span>
            </div>
        </button>
    </t>

    <!-- Hospitality Dialog Template -->
    <t t-name="HospitalityExpenseDialog" owl="1">
        <div class="hospitality-expense-dialog">
            <h3>Hospitality Expense</h3>
            <div class="form-group">
                <label for="employee-name">Employee Name:</label>
                <input type="text" 
                       id="employee-name" 
                       class="form-control" 
                       t-att-placeholder="inputPlaceholder" />
            </div>
            <div class="dialog-buttons">
                <button class="btn btn-secondary" t-on-click="_cancel">Cancel</button>
                <button class="btn btn-primary" t-on-click="_confirm">Confirm</button>
            </div>
        </div>
    </t>
</templates>
